rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own user doc; admins can read all
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Notifications: users can read their own notifications
    match /notifications/{docId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // writes should come from the app on behalf of authenticated users; tighten as needed
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Applications: owner can read/write their own; admins/attorneys require custom logic
    match /applications/{appId} {
      allow read, write: if request.auth != null; // Simplified: adjust to roles if using security rules with custom claims
    }

    // Counters for sequential numbers
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
